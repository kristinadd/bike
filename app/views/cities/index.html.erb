<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">

       <div class="col-md-12 mb-3 mt-5">
          <div class="card green-card">
            <div class="card-body">
              <p style="text-align: center;">Can't find the city you're looking for? Add a new city.</p>
              <div class="text-center">
                <%= link_to "New City", new_city_path, class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        </div>

      <% @cities.each do |city| %>
        <div class="col-md-12 mb-3 mt-5">
          <div class="card green-card">
            <div class="card-body">

              <div style="text-align: center;">
                <h2>
                  <%= city.name %><br>
                </h2>
              </div>
              <%= city.description %><br>

              <!-- Center the image using Bootstrap's text-center class -->
              <div class="text-center">
                <%= image_tag "/city_images/#{city.id}.png", size: "350x250", class: "img-fluid" %><br>
              </div>

            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

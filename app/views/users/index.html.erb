<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% @users.each do |user| %>
        <div class="col-md-12 mb-3 mt-5">
          <div class="card green-card">
            <div class="card-body">

              <!-- Flexbox container for avatar and email -->
              <div class="d-flex justify-content-between align-items-center">
                <!-- Avatar on the left -->
                <%= image_tag(user.avatar.url, class: 'big-avatar') if user.avatar? %>
                <%= user.name %><br>

                <% if user == current_user %>
                   <%= link_to "Delete", destroy_user_path(id: user.id), method: :delete, class: "btn btn-danger" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
